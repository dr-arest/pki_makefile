[ ca ]
default_ca		= CA_default

[ CA_default ]
dir			= /etc/ssl/FreeradiusCA/root-ca
certs			= $dir
crl_dir			= $dir/crl
database		= $dir/index.txt
new_certs_dir		= $dir
certificate		= $dir/root-ca.crt
serial			= $dir/serial
crl			= $dir/root-ca.crl
private_key		= $dir/root-ca.key
RANDFILE		= $dir/.rand
name_opt		= ca_default
cert_opt		= ca_default
default_days		= 3650
default_crl_days	= 30
default_md		= sha256
preserve		= no
policy			= policy_match
crlDistributionPoints	= URI:http://root-ca.arest-home.pp.ua/root-ca.crl

[ policy_match ]
countryName		= match
stateOrProvinceName	= optional
organizationName	= match
organizationalUnitName	= optional
commonName		= supplied
emailAddress		= optional

[ policy_anything ]
countryName		= optional
stateOrProvinceName	= optional
localityName		= optional
organizationName	= optional
organizationalUnitName	= optional
commonName		= supplied
emailAddress		= optional

[ req ]
prompt			= no
distinguished_name	= certificate_authority
default_bits		= 2048
input_password		= PerekatipoleRoot
output_password		= PerekatipoleRoot
x509_extensions		= v3_ca

[certificate_authority]
countryName		= UA 
organizationName	= Arest Inc.
commonName		= "Arest Root CA"

[v3_ca]
keyUsage		= critical,keyCertSign,cRLSign
basicConstraints	= critical,CA:true
subjectKeyIdentifier	= hash
authorityKeyIdentifier	= keyid:always,issuer:always
crlDistributionPoints	= URI:http://root-ca.arest-home.pp.ua/root-ca.crl
authorityInfoAccess	= OCSP;URI:http://ocsp.root-ca.arest-home.pp.ua:9080

